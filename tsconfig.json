{
  "extends": "@gravity-ui/tsconfig/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "outDir": "build/esm",
    "jsx": "preserve",
    "baseUrl": ".",
    "target": "ES2020",
    "resolveJsonModule": true,
    "importHelpers": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["**/*.ts", "**/*.tsx",],
  "exclude": ["node_modules"]
}
